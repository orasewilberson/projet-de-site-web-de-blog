{% extends 'layout.twig' %}

{% block body %}


    {% if flash('error') %}
        <div class="alert alert-danger">
            {{ flash('error') }}
        </div>
    {% endif %}


   <form action="{{ path('auth.login') }}" method="post">
        {{ csrf_input() }}
        {{ field(_context, 'username', null, 'Nom d\'utilisateur') }}
        {{ field(_context, 'password', null, 'Mot de passe') }}
        <button class="btn btn-primary">Se connecter</button>
    </form>
{% endblock %}
