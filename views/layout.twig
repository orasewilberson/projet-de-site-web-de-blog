<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title "Mon site" %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      
  </head>
  <body>
    
  <nav class="navbar navbar-expand-lg bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Mon super site</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ path('blog.index') }}">Blog</a>
        </li>      
    </div>
    <div class="navbar-nav mr-auto">
      {% if current_user() %}
        <div class="navbar-test">connecte en tant que {{ current_user().username }}</div>
        <form class="nav-item active" method="post" action="{{ path('auth.logout') }}">
            {{ csrf_input() }}
            <button class="nav-link">Se deconneter</button>
        </form>
        {% else %}
            <div class="nav-item">
              <a class="nav-link active bi bi-person-circle" aria-current="page" href="{{ path('auth.login') }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
              </svg>
                  S'inscrire
              </a>
            </div>
            <div class="nav-item">
              <a class="nav-link active" aria-current="page" href="{{ path('auth.login') }}">Se connecter</a>
            </div> 
      {% endif %}
    </div>
  </div>
</nav>

<div class="container">

{% block body %}{% endblock %}

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.locales.min.js"></script>
<script>
    timeago.render(document.querySelectorAll('.timeago', 'fr'));
</script>
<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

<footer>
        {% block footer %}
            {% include 'footer.twig' %}
        {% endblock %}
</footer>
</body>
</html>